        <ul class="nav justify-content-evenly">
            <li class="nav-item m-2">
                <a href="/users/myPage/myPosts" class="nav-link active fs-3 m-2 text-black text-decoration-underline">
                    My Posts
                </a>
            </li>
            <li class="nav-item m-2">
                <a href="/users/myPage/myMessages" class="nav-link fs-3 m-2 text-black">
                    My Messages
                </a>
            </li>
        </ul>
            
        <div class=" m-2 justify-center-start fs-4 text-secondary">
            Showing <%= Items.length %> out of <%= total%> results
        </div>

        <div class="container-fluid" id="homepageCategory">
            <div class="container">
                <div class="row row-cols-1 row-cols-md-4 g-4">
                    <% for(let i = 0; i < Items.length; i++) { %>
                        <div class="col">
                            <div class="card h-100" style="width: 18rem;">
                                <a href="/dp?id=<%=Items[i].idItems%>"><img src="/<%=Items[i].thumbnail%>"
                                        class="card-img-top" alt="..."></a>
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <%=Items[i].title%>
                                    </h5>
                                    <p class="card-text">
                                        <%=Items[i].description%>
                                    </p>
                                </div>
                                <div class="card-footer">
                                    <h3 class="text"><b>$<%=Items[i].price%></b></h3>
                                </div>
                            </div>
                        </div>
                        <% } %>
                </div>
            </div>
        </div>

    </div>
    <%- include('partials/footer') %>
    <script src="/javascripts/bootstrap.bundle.js"></script>
    <script src="/javascripts/search.js"></script>
</body>

